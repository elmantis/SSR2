{
  "name": "ssrreact2",
  "version": "1.0.0",
  "main": "server/server.ts",
  "scripts": {
    "build:client": "webpack --config webpack.client.config.js",
    "build:server": "webpack --config webpack.server.config.js",
    "build": "npm run build:client && npm run build:server",
    "start": "nodemon dist/server.bundle.js",
    "dev": "npm run build:client && concurrently \"nodemon dist/server.bundle.js\" \"webpack --watch --config webpack.server.config.js\" \"webpack --watch --config webpack.client.config.js\"",
    "typecheck": "tsc --noEmit",
    "test:server": "jest --config jest.config.js",
    "test:react": "jest --config jest.config.ui.js",
    "test": "concurrently \"npm run test:server\" \"npm run test:react\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "express": "^4.21.2",
    "firebase": "^11.5.0",
    "firebase-admin": "^13.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "react-router-dom": "^7.4.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "react-refresh": "^0.17.0",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  }
}
